{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/web/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PORT": "8000"
  },
  "crons": [
    {
      "path": "/api/cron/process-news",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/process-news",
      "schedule": "30 6 * * *"
    }
  ]
}